<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="playIcon" class="javax.swing.ImageIcon">
        <constructor-arg type="java.net.URL" value="classpath:/images/Play.png" />
    </bean>

    <bean id="pauseIcon" class="javax.swing.ImageIcon">
        <constructor-arg type="java.net.URL" value="classpath:/images/Pause.png" />
    </bean>

    <bean id="stopIcon" class="javax.swing.ImageIcon">
        <constructor-arg type="java.net.URL" value="classpath:/images/Stop.png" />
    </bean>

    <bean id="addIcon" class="javax.swing.ImageIcon">
        <constructor-arg type="java.net.URL" value="classpath:/images/Add.png" />
    </bean>

    <bean id="deleteIcon" class="javax.swing.ImageIcon">
        <constructor-arg type="java.net.URL" value="classpath:/images/Delete.png" />
    </bean>

</beans>